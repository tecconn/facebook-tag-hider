{
	"name": "Facebook Tag Hider",
	"description": "Hides tag comments from posts",
	"manifest_version": 2,
	"version": "2.1",
	"icons": {
		"128": "img/app/tag-icon-128.png",
		"48": "img/app/tag-icon-48.png",
		"16": "img/app/tag-icon-16.png"
	},
	"browser_action": {
		"default_icon": {
			"128": "img/app/tag-icon-128.png",
			"48": "img/app/tag-icon-48.png",
			"16": "img/app/tag-icon-16.png"
		},
		"default_popup": "popup.html"
	},
	"permissions": [
		"https://*.facebook.com/*",
		"http://*.facebook.com/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://*.facebook.com/*",
				"http://*.facebook.com/*"
			],
			"css": [
				"css/app/style.css"
			],
			"js": [
				"js/jquery/jquery-3.2.1.min.js",
				"js/app/main.js"
			]
		}
	]
}